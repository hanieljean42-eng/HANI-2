{
  "expo": {
    "name": "HANI 2",
    "slug": "loveapp2026",
    "version": "5.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B9D"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.loveapp.couple2026",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSUserNotificationsUsageDescription": "Nous utilisons les notifications pour vous alerter des messages de votre partenaire."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B9D"
      },
      "package": "com.loveapp.couple2026",
      "permissions": [
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF6B9D",
          "sounds": [],
          "mode": "production"
        }
      ],
      "expo-font"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#FF6B9D",
      "androidMode": "default",
      "androidCollapsedTitle": "HANI 2 ðŸ’•"
    },
    "extra": {
      "eas": {
        "projectId": "b1f00575-c61e-45ee-84ac-b1644dff132f"
      }
    },
    "owner": "25aa00445b"
  }
}
